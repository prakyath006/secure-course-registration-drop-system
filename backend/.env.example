# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (Generate a strong random key in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Encryption Key (32 bytes for AES-256)
ENCRYPTION_KEY=your-32-character-encryption-key

# Email Configuration (Update with your SMTP settings)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@courseregistration.com

# OTP Configuration
OTP_EXPIRY_MINUTES=5

# Rate Limiting
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MS=900000

# Registration Window (ISO format)
REGISTRATION_START=2025-01-01T00:00:00Z
REGISTRATION_END=2026-12-31T23:59:59Z
DROP_DEADLINE=2026-12-15T23:59:59Z
